- @page_title = "Factions"
%div.block
  %div.content
    %div.inner
      %h2.title Factions
      %table.table
        %tr
          %th
          %th Name
          %th Description
          %th
          %th
          %th
        - @factions.each do |faction|
          %tr{ :class=> faction.tagcolour.downcase }
            - if faction.image?
              %td=  image_tag(faction.image,:height => 60,:width => 60)
              - else
                %td No image
            %td= faction.name
            %td= faction.description
            %td= link_to 'Show', faction
            %td= link_to 'Edit', edit_faction_path(faction)
            %td= link_to 'Destroy', faction, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Faction', new_faction_path
